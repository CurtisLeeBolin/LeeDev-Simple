{{!< default}}

<h1 style="text-align: center;">{{@blog.title}}</h1>
<h3 style="text-align: center;">{{@blog.description}}</h3>

{{#foreach posts}}

<div class="inner cover post post-head">
	<h2 class="cover-heading post-title"><a href="{{url}}">{{{title}}}</a></h2>
	<time datetime="{{date format="YYYY-MM-DD"}}">{{date format='YYYY MMM DD'}}</time>
</div>

<div class="inner cover post post-body">
{{excerpt}}
</div>
{{/foreach}}

{{pagination}}
